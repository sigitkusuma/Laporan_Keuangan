<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentFragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_marginTop="90dp"
       android:layout_marginLeft="14dp"
       android:layout_marginRight="14dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:id="@+id/rl_payment_main"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/square_payment_page"
           android:layout_width="match_parent"
           android:layout_height="220dp">
           <LinearLayout
               android:id="@+id/ll_saldo"
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="24dp"
               android:layout_marginRight="24dp"
               android:layout_marginBottom="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:text="Saldo"
                   android:textColor="#fff"
                   android:textSize="24sp"
                   android:textStyle="normal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
               </TextView>
               <TextView
                   android:textStyle="bold"
                   android:textSize="28dp"
                   android:textColor="#fff"
                   android:text="Rp. 9.000.000"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </TextView>
               <View
                   android:layout_marginTop="8dp"
                   android:background="@drawable/line_payment_page"
                   android:layout_width="match_parent"
                   android:layout_height="1.5dp">
               </View>
               <TextView
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:layout_marginTop="12dp"
                   android:text="Incoming"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </TextView>
               <RelativeLayout
                   android:layout_marginTop="8dp"
                   android:orientation="horizontal"
                   android:layout_below="@+id/ll_saldo"
                   android:layout_marginBottom="4dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_alignParentLeft="true"
                       android:text="Today"
                       android:textColor="#fff"
                       android:textSize="16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_alignParentRight="true"
                       android:text="Rp. 2.000.000"
                       android:textColor="#fff"
                       android:textSize="16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>
               <RelativeLayout
                   android:orientation="horizontal"
                   android:layout_marginBottom="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_alignParentLeft="true"
                       android:text="Yesterday"
                       android:textColor="#fff"
                       android:textSize="16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_alignParentRight="true"
                       android:text="Rp. 3.000.000"
                       android:textColor="#fff"
                       android:textSize="16sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>
           </LinearLayout>
       </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="12dp"
           android:layout_below="@+id/rl_payment_main"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_gravity="center"
                   android:textAlignment="center"
                   android:text="Please make payment as soon as posible"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
               </TextView>
               <TextView
                   android:layout_marginTop="8dp"
                   android:text="Nominal"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginLeft="36dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:layout_marginTop="12dp"
                   android:layout_marginRight="24dp"
                   android:layout_marginLeft="24dp"
                   android:background="@drawable/square_edit_text"
                   android:layout_width="match_parent"
                   android:layout_height="48dp"/>
               <View
                   android:layout_marginTop="8dp"
                   android:background="@drawable/line_payment_page"
                   android:layout_width="match_parent"
                   android:layout_height="1.5dp"/>

               <Button
                   android:background="@drawable/button_pay"
                   android:text="Pay"
                   android:textSize="20sp"
                   android:layout_marginTop="36dp"
                   android:layout_marginRight="36dp"
                   android:layout_marginLeft="36dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

       </RelativeLayout>
   </RelativeLayout>



</FrameLayout>